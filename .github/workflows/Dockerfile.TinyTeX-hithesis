From alpine

WORKDIR /root

Run apk update && apk upgrade && apk add perl curl fontconfig gnupg git make

Run wget -qO- https://raw.githubusercontent.com/dustincys/hithesis/master/.github/workflows/install-TinyTeX_hithesis.sh | sh

Run ls ~/.TinyTeX/bin/x86_64-linuxmusl/* | xargs -n 1 ln -s -f

Run mkdir /home/runner

ENV PATH="/root/bin:${PATH}"
WORKDIR /home/runner
VOLUME ["/home/runner"]
